generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LogAlert {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  checkEvery    Int      @default(300)
  logLimit      Int      @default(10)
  severity      String[]
  title         String?
  description   String?
  filter        String?
  serviceIds    String[]
  environmentId String
  token         String
  email         String
}
